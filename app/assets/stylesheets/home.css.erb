.wrap{
    width:80%;
    margin:0 auto;
    font-family:'Yekan';
    background-color:white;
    padding: 5% 5% 5% 5%;
    height: 100%;
}

#about_us{
    //float:right;
    //padding: 5% 5% 5% 5%;
    margin:4% 2% 2% 3%;
    background-color:white; 
    text_align:center;
    -webkit-border-radius: 30px 0 30px 0 ;
    border-radius: 30px 0 30px 0 ;
    border: 3px solid gray;
    padding: 0px 60px 18px 10px;
    opacity : 1 ;
}



#test_desc{
    //float:none;
    margin:2% 2% 10% 3%;
    background-color:white;
    text_align:center;
    -webkit-border-radius: 30px 0 30px 0;
    border-radius: 30px 0 30px 0;
    border: 3px solid gray;
    padding: 0px 60px 18px 10px;
    opacity : 1 ;
}

.img{
-webkit-border-radius: 30px 0 30px 0;
    border-radius: 30px 0 30px 0;
}



.main-div{
    font-family:'Ferdosi';
    font-size:14px;
    direction: rtl;
    background-image: url(<%= asset_path 'white.png' %>) ;
    background-repeat: no-repeat !important;
    background-size: 100% 100% !important;
    background-color:#D8D8F7 !important;
}

#sign_in_form{
    text_align:center;
    margin:0.5% 55% 10% 10%;
    -webkit-border-radius: 30px 0 30px 0;
    border-radius: 30px 0 30px 0;
    border: 3px solid gray;
    padding: 0px 60px 18px 10px;
    background-color:#C4C4CF;
    opacity:0.7;
}

#description{
    text_align:center;
    margin:0.5% 2% 0% 50%;
    -webkit-border-radius: 30px 0 30px 0;
    border-radius: 30px 0 30px 0;
    border: 3px solid gray;
    padding: 0px 60px 18px 10px;
    background-color:#C4C4CF;
    opacity:0.7;
}

#enter{
    padding-right:50%;
    font-family:'Yekan';    
}

#remember_me{
    padding-right:10%;
}

.label{
    color:black;
}